<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <carbon.widget.RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center_vertical">

        <carbon.widget.ImageView
            android:id="@+id/close_btn"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@color/backgroundColor"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/baseline_close_24"
            app:carbon_cornerRadius="@dimen/_15sdp"
            app:carbon_tint="@color/secondaryColor" />

        <carbon.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/manrope_bold"
            android:text="New Payment"
            android:textColor="@color/secondaryColor"
            android:textSize="@dimen/_14sdp" />
    </carbon.widget.RelativeLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:background="@drawable/spinner_bg"
        android:hint="Installments">

        <Spinner
            android:id="@+id/installmentSpinner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_42sdp"
            android:fontFamily="@font/manrope_medium"
            android:textColor="@color/secondaryColor"
            android:textSize="@dimen/_13sdp" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:hint="Amount Paid">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/totalAmtEditTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_medium"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:textColor="@color/secondaryColor"
            android:textSize="@dimen/_13sdp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:hint="Balance">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/balanceAmtEditTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_medium"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:textColor="@color/secondaryColor"
            android:textSize="@dimen/_13sdp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:hint="Remarks">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/remarkEditTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_medium"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/secondaryColor"
            android:textSize="@dimen/_13sdp" />
    </com.google.android.material.textfield.TextInputLayout>


    <carbon.widget.Button
        android:id="@+id/saveBtn"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_42sdp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_20sdp"
        android:background="@color/secondaryColor"
        android:fontFamily="@font/manrope_semibold"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_13sdp"
        app:carbon_cornerRadius="@dimen/_10sdp"
        app:carbon_elevation="@dimen/_2sdp" />
</androidx.appcompat.widget.LinearLayoutCompat>