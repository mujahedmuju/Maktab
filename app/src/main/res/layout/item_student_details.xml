<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_14sdp"
    android:layout_marginEnd="@dimen/_14sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingStart="@dimen/_12sdp"
    app:carbon_cornerRadius="@dimen/_8sdp"
    app:carbon_elevation="@dimen/_2sdp">

    <TextView
        android:id="@+id/stdName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/manrope_semibold"
        android:layout_marginTop="@dimen/_7sdp"
        android:text="Mohammed Mujahed"
        android:textAllCaps="true"
        android:textColor="@color/secondaryColor"
        android:textSize="@dimen/sub_head_textSize" />

    <TextView
        android:id="@+id/fatherName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/manrope_medium"
        android:text="C/O Mohammed Moiz Uddin"
        android:textColor="@color/secondaryColor"
        android:textSize="@dimen/small_head_textSize" />

    <TextView
        android:id="@+id/phoneNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/manrope_medium"
        android:text="Phone: 7097689611"
        android:textColor="@color/secondaryColor"
        android:textSize="@dimen/small_head_textSize" />

    <TextView
        android:id="@+id/dob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_6sdp"
        android:fontFamily="@font/manrope_medium"
        android:text="D.O.B: 21-01-2000"
        android:textColor="@color/secondaryColor"
        android:textSize="@dimen/small_head_textSize" />

</carbon.widget.LinearLayout>

